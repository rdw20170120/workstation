#!/usr/bin/env bash
# Intended to be executed in a Bash shell.
[[ -n "${BO_Trace}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}" && [[ "${BO_Trace}" != 'TRACE' ]] && set -vx
# NO: set -e
# NO: trap ... EXIT
###############################################################################

main() {
    # Uninstall Homebrew

    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/uninstall.sh)"
    if [[ -n "${HOMEBREW_PREFIX}" ]]; then
        if [[ -d "${HOMEBREW_PREFIX}" ]]; then
            echo "INFO: Deleting directory '${HOMEBREW_PREFIX}' to uninstall Homebrew"
            echo rm -fr "${HOMEBREW_PREFIX}"
        else
            echo "WARN: Missing directory '${HOMEBREW_PREFIX}', skipping uninstall of Homebrew"
        fi
    else
        echo "DEBUG: Missing 'HOMEBREW_PREFIX', skipping uninstall of Homebrew"
    fi
    sudo rm -fr /Applications/Emacs.app
    sudo rm -fr /Applications/iTerm.app
    sudo rm -fr /Applications/Postman.app

    return 0
}

main $@

###############################################################################
# NOTE: Uncomment these lines for debugging, placed where needed
# export PS4='$ ' ; set -vx
# Code to debug...
# set +vx

