#!/usr/bin/env bash
# Intended to be executed in a Bash shell.
[[ -n "${BO_Trace}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}" && [[ "${BO_Trace}" != 'TRACE' ]] && set -vx
# NO: set -e
# NO: trap ... EXIT
###############################################################################

main() {
    # Uninstall Anaconda

    if [[ -n "${CONDA_PREFIX}" ]]; then
        if [[ -d "${CONDA_PREFIX}" ]]; then
            echo "INFO: Deleting directory '${CONDA_PREFIX}' to uninstall Anaconda"
            rm -fr "${CONDA_PREFIX}"
        else
            echo "WARN: Missing directory '${CONDA_PREFIX}', skipping uninstall of Anaconda"
        fi
    else
        echo "DEBUG: Missing 'CONDA_PREFIX', skipping uninstall of Anaconda"
    fi

    return 0
}

main $@

###############################################################################
# NOTE: Uncomment these lines for debugging, placed where needed
# export PS4='$ ' ; set -vx
# Code to debug...
# set +vx

