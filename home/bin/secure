#!/usr/bin/env bash
# Intended to be executed in a Bash shell.
[[ -n "${BO_Trace}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}" && [[ "${BO_Trace}" != 'TRACE' ]] && set -vx
# NO: set -e
trap warn_on_error EXIT
###############################################################################
# Secure parts of user home directory

# Secure login scripts
chmod u=rw,g=,o= ~/.bash_logout
chmod u=rw,g=,o= ~/.bash_profile
chmod u=rw,g=,o= ~/.bashrc
chmod u=rw,g=,o= ~/.profile
chmod u=rw,g=,o= ~/*.bash

# Secure SSH directory
dir=~/.ssh
if [[ -d $dir ]] ; then
  chmod u=rwx,g=,o= $dir
  chmod u=rw,g=,o=  $dir/*
fi

# Secure personal script directory
dir=~/bin
if [[ -d $dir ]] ; then
  chmod -R u=rwx,g=,o= $dir
fi
dir=~/bin/lib
if [[ -d $dir ]] ; then
  chmod u=rw,g=,o= $dir/*
fi

# Secure projects (Git working directories)
dir=~/project
if [[ -d $dir ]] ; then
  chmod -R g=,o= $dir
fi

main() {
    # TODO: DESCRIPTION

    # TODO: CONTENT

    return 0
}

main $@

###############################################################################
# NOTE: Uncomment these lines for debugging, placed where needed
# export PS4='$ ' ; set -vx
# Code to debug...
# set +vx

: << 'DisabledContent'
DisabledContent

