#!/usr/bin/env bash
set -e
# DISABLED: set -x
# Intended to be executed directly by the user.
###############################################################################
# Generate source

# Require activation
if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

Script=$BO_Project/BriteOnyx/bin/lib/configure-Python.bash
if [[ -r $Script ]] ; then
    source $Script
else
    echo "WARN: Script file '$Script' is not readable"
fi

# Require TMPDIR
if [[ -z "$TMPDIR" ]] ; then
    echo "FATAL: Environment variable 'TMPDIR' is undefined, aborting"
    exit 1
fi

# Recreate target directory (handled within Python)
DirTgt=$TMPDIR/tgt

echo "INFO: Generating content into directory '$DirTgt'"
cd $BO_Project/src/gen

# Execute Python
cmd='python3'
# cmd+=' -bb'
cmd+=' -m generate'
cmd+=" $DirTgt"
echo $cmd $@
$cmd $@

# Merge generated files into project directory
# TODO: RESEARCH: why Meld does not open a new tab on macOS?
cmd='meld --newtab'
cmd+=" '$DirTgt' '$BO_Project'"
cmd+=' >/dev/null 2>&1 &'
echo "INFO: Use the following command to manually merge the generated source:"
echo $cmd

###############################################################################
: << 'DisabledContent'
DisabledContent

