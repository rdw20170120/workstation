#!/usr/bin/env bash
[[ -n "${BO_Debug}" ]] && 1>&2 echo "DEBUG: Executing ${BASH_SOURCE}"
# NO: set -e
# Intended to be executed in a BASH shell.

report_status_and_exit() {
    local -ir Status=$?
    [[ "${Status}" -ne 0 ]] && 
        1>&2 echo "FATAL: ${0} exiting with status ${Status}"
    exit ${Status}
}
trap report_status_and_exit EXIT
###############################################################################
# Install Python dependencies

[[ -z "${BO_Project}" ]] && 
    1>&2 echo "FATAL: This project is NOT ACTIVATED, aborting" && 
    exit 99

echo "INFO: Installing Python dependencies"

pip3 install pip wheel --upgrade --upgrade-strategy=eager
pip3 install \
    boto3 awscli \
    logzero \
    black \
    pytest \
    pytest-cov coverage[toml] \
    pytest-html ansi2html \
    pytest-icdiff \
    pytest-sugar

main() {
    # TODO: DESCRIPTION

    # TODO: CONTENT

    return 0
}

main $@

