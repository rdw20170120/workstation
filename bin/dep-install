#!/usr/bin/env bash
# Intended to be executed in a Bash shell.
[[ -n "${BO_Trace}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}" && [[ "${BO_Trace}" != 'TRACE' ]] && set -vx
# NO: set -e
trap warn_on_error EXIT
###############################################################################
[[ -z "${BO_Project}" ]] &&
    1>&2 echo "ERROR: Aborting, this project is NOT ACTIVATED" &&
    exit 99

main() {
    # Install Python dependencies
    require_arguments $# 0

    require_command nix-env

    log_debug "Installing Python dependencies"

}

main $@

###############################################################################
# NOTE: Uncomment these lines for debugging, placed where needed
# export PS4='$ ' ; set -vx
# Code to debug...
# set +vx

: << 'DisabledContent'
    local Packages
    # NOTE: Install Python dependencies required for code and tests
    Packages='python3-3.9.1'
    # Needed for testing
    Packages+=' python3.9-coverage-5.3'
    Packages+=' python3.9-pytest-6.1.2'
    Packages+=' python3.9-pytest-cov-2.10.1'
    # Needed for utilities
    Packages+=' python3.9-logzero-1.6.3'
    # Needed for application
    Packages+=' awscli-1.19.5'
    Packages+=' python3.9-boto3-1.17.5'
    # NOTE: Install Python dependencies only needed for developer experience
    Packages+=' icdiff-1.9.5'
    Packages+=' python3.9-ansi2html-1.6.0'
    Packages+=' python3.9-black-20.8b1'
    Packages+=' python3.9-pytest-html-3.1.1'
    Packages+=' python3.9-pytest-sugar-0.9.4'

    nix-env -i ${Packages}
    abort_on_fail $? "from nix-env"

NO: sh
