#!/usr/bin/env bash
[[ -n "${BO_Trace}" ]] && echo "TRACE: Executing${BASH_SOURCE}"
# NO: set -e
# Intended to be executed in a BASH shell.

report_status_and_exit() {
    local -ir Status=$?
    if [[ "${Status}" -eq 0 ]] ; then
        echo "INFO:  ${0} exiting with status ${Status}"
    else
        echo "FATAL: ${0} exiting with status ${Status}"
    fi
    exit ${Status}
}
trap report_status_and_exit EXIT
###############################################################################
# Install Python dependencies

if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

echo "INFO: Installing Python dependencies"

pip3 install pip wheel --upgrade --upgrade-strategy=eager
pip3 install \
    black \
    boto3 awscli \
    logzero \
    pytest \
    pytest-cov coverage[toml] \
    pytest-html ansi2html \
    pytest-icdiff \
    pytest-sugar

###############################################################################
# NOTE: Uncomment these lines for debugging, placed where needed
# set -o verbose
# set -o xtrace
# Code to debug...
# set +o verbose
# set +o xtrace
: << 'DisabledContent'
NO: pip3 install sh
TODO: RESEARCH: Consider pytest-benchmark
TODO: RESEARCH: Consider pytest-clarity
TODO: RESEARCH: Consider pytest-datafiles
TODO: RESEARCH: Consider pytest-deadfixtures
TODO: RESEARCH: Consider pytest-freezegun
