#!/usr/bin/env bash
# set -e
# This script is intended to be executed by a user in a BASH shell.

# Run tests

if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

Script=$BO_Project/bin/lib/configure-Python.bash
if [[ -r $Script ]] ; then
    source $Script
else
    echo "WARN: Script file '$Script' is not readable"
fi

cd $BO_Project/lib/mine
py.test --log-file=pytest.log
# DISABLED: --show-capture=no

cd $BO_Project/gen
py.test --log-file=pytest.log
# DISABLED: --show-capture=no

cd $BO_Project/src
py.test --log-file=pytest.log
# DISABLED: --show-capture=no

