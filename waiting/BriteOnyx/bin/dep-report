#!/usr/bin/env bash
# Intended to be executed in a Bash shell.
[[ -n "${BO_Trace}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}" && [[ "${BO_Trace}" != 'TRACE' ]] && set -vx
# NO: set -e
trap warn_on_error EXIT
###############################################################################
[[ -z "${BO_Project}" ]] &&
    1>&2 echo "ERROR: Aborting, this project is NOT ACTIVATED" &&
    exit 99

main() {
    # Report Python dependency status
    # TODO: Enhance to accept argument for output file
    require_arguments $# 0

    require_value pip

    ${pip} freeze --all | sort
    abort_on_fail $? "from ${pip} freeze ... | sort"

    return 0
}

main $@

###############################################################################
