#!/usr/bin/env bash
[[ -n "${BO_Debug}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}"
# NO: set -e
# Intended to be executed in a BASH shell.
trap warn_on_error EXIT
###############################################################################
[[ -z "${BO_Project}" ]] &&
    log_error "Aborting, this project is NOT ACTIVATED" &&
    exit 99

if [[ -z "$PVE" ]] ; then
    log_error "Environment variable 'PVE' is undefined, aborting"
    exit 1
fi

log_debug "Recreating Python virtual environment directory '$PVE'"
prj-wipe
pve-create
source $BO_Project/BriteOnyx/bin/lib/pve-activate.bash
dep-install

main() {
    # Recreate Python virtual environment directory

    # TODO: CONTENT

    return 0
}

main $@

