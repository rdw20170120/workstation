#!/usr/bin/env bash
# This script is intended to be executed by a user in a BASH shell.
set -e

# Check Python status

if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

File=$BO_Project/out/Python.out

if [[ ! -r "$File" ]] ; then
    echo "FATAL: Python status file '$File' is unreadable, aborting"
    exit 1
fi

echo "INFO: Checking Python status against '$File'"
py-report | diff - $File

