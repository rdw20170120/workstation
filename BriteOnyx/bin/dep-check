#!/usr/bin/env bash
set -e
# DISABLED: set -x
# Intended to be executed directly by the user.
###############################################################################
# Check Python dependency status

if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

File=$BO_Project/cfg/requirements.txt

if [[ ! -r "$File" ]] ; then
    echo "FATAL: Python dependency status file '$File' is unreadable, aborting"
    exit 1
fi

echo "INFO: Checking Python dependency status against '$File'"
dep-report | diff - $File

###############################################################################
: << 'DisabledContent'
DisabledContent

