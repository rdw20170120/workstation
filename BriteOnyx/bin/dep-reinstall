#!/usr/bin/env bash
set -e
# DISABLED: set -x
# Intended to be executed directly by the user.
###############################################################################
# Reinstall frozen Python dependencies

if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

File=$BO_Project/cfg/requirements.txt
if [[ ! -r "$File" ]] ; then
    echo "FATAL: Python requirements file '$File' is unreadable, aborting"
    exit 1
fi

echo "INFO: Installing Python dependencies from '$File'"
pip3 install -r $File

###############################################################################
: << 'DisabledContent'
DisabledContent

