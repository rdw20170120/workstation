#!/usr/bin/env bash
[[ -n "${BO_Debug}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}"
# NO: set -e
# Intended to be executed in a BASH shell.
trap warn_on_error EXIT
###############################################################################
[[ -z "${BO_Project}" ]] &&
    log_error "Aborting, this project is NOT ACTIVATED" &&
    exit 99

if [[ -z "$PVE" ]] ; then
    log_error "Environment variable 'PVE' is undefined, aborting"
    exit 1
fi

log_debug "Creating Python virtual environment directory '$PVE'"
python3 -m venv $PVE

echo 'WARN: This new Python virtual environment has NOT been activated, so you should `exit` this shell and activate a new one'

main() {
    # Create (and activate) Python virtual environment directory

    # TODO: CONTENT

    return 0
}

main $@

