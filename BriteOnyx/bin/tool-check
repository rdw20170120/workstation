#!/usr/bin/env bash
set -e
# This script is intended to be executed by a user in a BASH shell.

# Check tool dependencies

if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

File=$BO_Project/cfg/tool.out

if [[ ! -r "$File" ]] ; then
    echo "FATAL: Tool dependencies file '$File' is unreadable, aborting"
    exit 1
fi

echo "INFO: Checking tool dependencies against '$File'"
tool-report | diff - $File

