#!/usr/bin/env bash
set -e
# DISABLED: set -x
# Intended to be executed directly by the user.
###############################################################################
# Check tool status

if [[ -z "$BO_Project" ]] ; then
    echo "FATAL: Environment variable 'BO_Project' is undefined, aborting"
    exit 1
fi

File=$BO_Project/out/tool.out

if [[ ! -r "$File" ]] ; then
    echo "FATAL: Tool status file '$File' is unreadable, aborting"
    exit 1
fi

echo "INFO: Checking tool status against '$File'"
tool-report | diff - $File

###############################################################################
: << 'DisabledContent'
DisabledContent

