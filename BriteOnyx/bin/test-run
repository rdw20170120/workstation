#!/usr/bin/env bash
[[ -n "${BO_Trace}" ]] && echo "TRACE: Executing${BASH_SOURCE}"
# NO: set -e
# Intended to be executed in a BASH shell.

report_status_and_exit() {
    local -ir Status=$?
    if [[ "${Status}" -eq 0 ]] ; then
        echo "INFO:  ${0} exiting with status ${Status}"
    else
        echo "FATAL: ${0} exiting with status ${Status}"
    fi
    exit ${Status}
}
trap report_status_and_exit EXIT
###############################################################################

[[ -z "${BO_Project}" ]] &&
    echo "FATAL: 'BO_Project' is undefined, aborting" &&
    exit 20

Script=${BO_Project}/BriteOnyx/bin/lib/configure-Python.bash
if [[ -r ${Script} ]] ; then
    source ${Script}
else
    echo "WARN: Script file '${Script}' is not readable"
fi

run_coverage() {
    # Run Python coverage on previous pytest data
    # $1 = Python coverage configuration file
    local -i Status

    coverage3 html --rcfile=$1
    Status=$? ; [[ ${Status} -ne 0 ]] && exit ${Status}
    coverage3 report --rcfile=$1
    Status=$? ; [[ ${Status} -ne 0 ]] && exit ${Status}
}

run_pytest() {
    # Run pytest on test suite known as $1 in directory $2
    # $1 = Python coverage configuration file
    # $2 = test suite name
    # $3 = test suite parent directory
    local -i Status

    cd $3
    Status=$? ; [[ ${Status} -ne 0 ]] && exit ${Status}

    pytest \
	--cov=$3 \
	--cov-append \
	--cov-config=$1 \
	--cov-report= \
        --log-file=${BO_Project}/log/pytest-$2.log
    Status=$? ; [[ ${Status} -ne 0 ]] && exit ${Status}
}

main() {
    # Run Python test suites
    local -r Config=${BO_Project}/cfg/.coveragerc

    coverage3 erase --rcfile=${Config}
    Status=$? ; [[ ${Status} -ne 0 ]] && exit ${Status}

    run_pytest   ${Config} mine ${BO_Project}/src/lib/mine
    run_pytest   ${Config} gen  ${BO_Project}/src/gen
    run_pytest   ${Config} app  ${BO_Project}/src/app

    cd ${BO_Project}/src
    Status=$? ; [[ ${Status} -ne 0 ]] && exit ${Status}
    run_coverage ${Config}

    return 0
}

main $@

###############################################################################
# NOTE: Uncomment these lines for debugging, placed where needed
# set -o verbose
# set -o xtrace
# Code to debug...
# set +o verbose
# set +o xtrace
: << 'DisabledContent'
	--cov-report=html \
        --html=${BO_Project}/out/pytest-$2.html \
	--no-cov-on-fail \
	--self-contained-html
DisabledContent

