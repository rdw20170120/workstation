#!/usr/bin/env bash
[[ -n "${BO_Debug}" ]] && 1>&2 echo "Executing ${BASH_SOURCE}"
# NO: set -e
# Intended to be executed in a Bash shell.
trap warn_on_error EXIT
###############################################################################
[[ -z "${BO_Project}" ]] &&
    1>&2 echo "ERROR: Aborting, this project is NOT ACTIVATED" &&
    exit 99

File=$BO_Project/cfg/requirements.txt

if [[ ! -r "$File" ]] ; then
    log_error "Python requirements file '$File' is unreadable, aborting"
    exit 1
fi

log_debug "Upgrading Python dependencies from '$File'"
pip3 install -r $File --upgrade --upgrade-strategy=eager

