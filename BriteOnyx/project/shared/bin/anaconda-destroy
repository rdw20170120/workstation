#!/usr/bin/env bash
# Intended to be executed in a Bash shell.
[[ -n "${BO_Trace}" ]] && 1>&2 log_trace "Executing ${BASH_SOURCE}" && [[ "${BO_Trace}" != 'TRACE' ]] && set -vx
# NO: set -e
# NO: trap ... EXIT
###############################################################################
[[ -z "${BO_Project}" ]] &&
    1>&2 log_error "Aborting, this project is NOT ACTIVATED" &&
    exit 99

main() {
    # Destroy Anaconda environment
    require_arguments $# 0

    require_variable BO_DirAnaconda
    maybe_delete_directory_tree "${BO_DirAnaconda}"

    return 0
}

main $@

